<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_large"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorBlue"
            android:text="Change Password"
            android:layout_marginTop="@dimen/margin_xx_large"
            android:gravity="center"/>



        <EditText
            android:id="@+id/ed_prePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="@dimen/margin_xx_large"
            android:inputType="text"
            android:hint="Enter Password"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="@dimen/margin_x_large"
            android:layout_marginRight="@dimen/margin_x_large"/>

        <EditText
            android:id="@+id/ed_newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="@dimen/margin_x_large"
            android:inputType="text"
            android:hint="Enter New Password"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="@dimen/margin_x_large"
            android:layout_marginRight="@dimen/margin_x_large"/>

        <EditText
            android:id="@+id/ed_confPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="@dimen/margin_x_large"
            android:inputType="text"
            android:hint="Enter Confirm Password"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="@dimen/margin_x_large"
            android:layout_marginRight="@dimen/margin_x_large"/>


        <Button
            android:id="@+id/btn_changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_x_large"
            android:layout_marginLeft="@dimen/margin_x_large"
            android:layout_marginTop="@dimen/margin_xx_large"
            android:padding="@dimen/margin_small"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/contact_button_background"
            android:textColor="@color/colorWhite"
            android:text="Change Password"
            />





    </LinearLayout>

</RelativeLayout>