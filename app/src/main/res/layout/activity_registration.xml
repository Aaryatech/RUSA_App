<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_bg">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_new"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorBlue"
            android:fontFamily="@font/lato_bold"
            android:text="Rashtriya Uchchatar"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorBlue"
            android:text="Shiksha Abhiyan"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorRed"
            android:text="Goverment Of Maharashtra"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorBlue"
            android:text=":REGISTRATION:"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/spinner_bg"
            android:layout_marginRight="20dp" />
        <!--android:drawableRight="@drawable/name_icon"-->
        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:hint="Email*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_alterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:visibility="gone"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:hint="Alternet Email"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Name*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_AISHE_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:visibility="gone"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="AISHE Code"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_clgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="College Name*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_univercityAffil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:inputType="text"
            android:hint="University Affiliated*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_designationPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Designation of the authorized Person*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_nameDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Name of Department*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_nameAuthPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:hint="Name of the authorized person*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ed_DOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="@font/lato_regular"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:inputType="none"
            android:layout_marginTop="20dp"
            android:hint="Date Of Birth*"
            android:background="@drawable/edittext_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>



        <Button
            android:id="@+id/btn_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textSize="18dp"
            android:fontFamily="@font/lato_bold"
            android:background="@drawable/button_background"
            android:textColor="@color/colorWhite"
            android:text="Create an account"
            />


        <LinearLayout
            android:id="@+id/linearLayout_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Already a user ?"
                android:fontFamily="@font/lato_bold"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" Sign In Now"
                android:fontFamily="@font/lato_bold"
                android:textSize="16dp"
                android:textColor="@color/colorRed"/>
        </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>