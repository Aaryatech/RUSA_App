<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="18dp"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="4dp"
    layout_height="">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/event">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorTransfer"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:drawableLeft="@drawable/ic_video_white"
                android:drawablePadding="10dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_image_white"
                android:drawablePadding="10dp"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_categori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_event_white"
                android:layout_weight="1"
                android:fontFamily="@font/lato_regular"
                android:layout_marginTop="@dimen/margin_tiny"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_EventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>

